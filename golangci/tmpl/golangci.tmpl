{{define "golangci"}}{
    "issues": {
        "exclude-rules": [
            {
                "path": "main.go",
                "linters": [
                    "wsl"
                ]
            },
            {
                "path": "_test.go",
                "linters": [
                    "cyclop",
                    "exhaustivestruct",
                    "funlen",
                    "varnamelen"
                ]
            }
        ],
        "exclude-use-default": false,
        "max-issues-per-linter": 0,
        "max-same-issues": 0
    },
    "linters": {
        "enable-all": true,
        "disable": [
            "gochecknoglobals",
            "golint",
            "interfacer",
            "maligned",
            "scopelint",
            "tagliatelle"
        ]
    },
    "linters-settings": {
        "varnamelen": {
            "max-distance": 30
        }
    },
    "run": {
        "deadline": "5m",
        "skip-dirs": [
            "reports",
            "scripts"
        ],
        "tests": true
    }
}
{{end}}